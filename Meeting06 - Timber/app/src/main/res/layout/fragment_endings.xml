<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFEBEE"
        android:orientation="vertical"
        tools:context="com.github.angellicaa99.meeting06_timber.EndingsFragment">

        <TextView
            style="@style/header_one_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin"
            android:layout_marginBottom="@dimen/margin"
            android:text="@string/unlocked_endings"
            android:textAlignment="center"
            android:textColor="#F06292" />

        <Button
            android:id="@+id/bad_ending_one_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginEnd="@dimen/margin"
            android:enabled="false"
            android:text="@string/ending_one" />

        <Button
            android:id="@+id/bad_ending_two_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginEnd="@dimen/margin"
            android:enabled="false"
            android:text="@string/ending_two" />

        <Button
            android:id="@+id/bad_ending_three_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginEnd="@dimen/margin"
            android:enabled="false"
            android:text="@string/ending_three" />

        <Button
            android:id="@+id/bad_ending_four_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginEnd="@dimen/margin"
            android:enabled="false"
            android:text="@string/ending_four" />

        <Button
            android:id="@+id/normal_ending_one_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginEnd="@dimen/margin"
            android:enabled="false"
            android:text="@string/normal_ending_one" />

        <Button
            android:id="@+id/normal_ending_two_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginEnd="@dimen/margin"
            android:enabled="false"
            android:text="@string/normal_ending_two" />

        <Button
            android:id="@+id/best_ending_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginEnd="@dimen/margin"
            android:enabled="false"
            android:text="@string/best_ending" />


    </LinearLayout>

</layout>